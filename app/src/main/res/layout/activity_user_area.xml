<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gestao.udec.gestao_mobile.UserAreaActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/escanear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btescanear" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/vincular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btvincular"
                android:layout_weight="1" />

            <Button
                android:text="@string/horario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bthorario"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/miPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btPerfil"
                android:layout_weight="1" />

            <Button
                android:text="@string/profesores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btprofesores"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
